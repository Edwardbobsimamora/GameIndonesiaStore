<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_game_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_arrow_left_solid_2" />

            <TextView
                android:id="@+id/tv_image_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:background="#4D000000"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Nama Game"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#2D0C57"
            android:text="Nama Game"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_game_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#2D0C57"
            android:text="Harga Game"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_game_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#2D0C57"
            android:text="Developer Game"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_game_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail game"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:ellipsize="end"
            android:layout_marginBottom="16dp"
            android:lineSpacingMultiplier="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#9586A8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="78dp"
                android:layout_height="56dp"
                android:layout_marginEnd="23.5dp"
                android:background="@drawable/love2"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cart_btn"
                android:layout_width="270dp"
                android:layout_height="56dp"
                android:background="@drawable/keranjang3"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>